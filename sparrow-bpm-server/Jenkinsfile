pipeline {
    agent { label 'dengbo-fedora' }

    environment {
        IMAGE_NAME = 'sparrow-bpm-server'
        IMAGE_TAG = "${env.GIT_COMMIT.take(7)}"
        JAVA_HOME = '/usr/lib/jvm/java-11-openjdk'
        PATH = "${env.JAVA_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Deploy') {
            steps {
                dir('sparrow-bpm-server') {   // ğŸ‘ˆ åˆ‡æ¢åˆ°å­ç›®å½•
                    sh 'mvn clean package -DskipTests'
                    sh """
                        docker build -f src/main/docker/Dockerfile -t ${IMAGE_NAME}:${IMAGE_TAG} .
                    """
                    configFileProvider([configFile(fileId: 'dengbo-bpm.yml', targetLocation: 'docker-compose.yml')]) {
                        sh '''
                            docker compose -f docker-compose.yml up -d --remove-orphans
                        '''
                    }
                }
            }
        }
    }

    post {
        failure {
            echo 'ğŸ’¥ æ„å»ºå¤±è´¥ï¼Œè¯·æ£€æŸ¥æ—¥å¿—'
        }
        success {
            echo 'âœ… æœåŠ¡å·²æˆåŠŸæ„å»ºå¹¶éƒ¨ç½²'
        }
    }
}
